          },
          {
            "group": "User Interface",
            "pages": [
              "ui/schedule",
              "ui/time-tracker"
            ]
          },
          {
            "group": "Core Features",
            "pages": [
              "user/bookings",
              "user/time-entries",
              "user/projects",
              "user/contacts",
              "user/quotes-invoices",
              "user/resources",
              "user/schedules",
              "user/reports",
              "user/integrations"
            ]
          },
          {
            "group": "Mintlify",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "Admin Documentation",
        "groups": [
          {
            "group": "Resources",
            "pages": [
              "admin/resources"
            ]
          }
