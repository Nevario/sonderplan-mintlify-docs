  "logo": {
    "light": "/logo/Sonderplan-Light.svg",
    "dark": "/logo/Sonderplan-Dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@sonderplan.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Login",
      "href": "https://login.sonderplan.com"
    }
  },
  "footer": {
    "socials": {
      "website": "https://www.sonderplan.com",
