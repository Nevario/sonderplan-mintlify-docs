{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Sonderplan Docs",
  "colors": {
    "primary": "#0D9373",
    "light": "#07C983",
    "dark": "#0D9373"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "/api-reference/openapi.yaml"
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://mintlify.com/community",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/Sonderplan-Light.svg",
    "dark": "/logo/Sonderplan-Dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@sonderplan.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Login",
      "href": "https://login.sonderplan.com"
    }
  },
  "footer": {
    "socials": {
      "website": "https://www.sonderplan.com",
      "linkedin": "https://linkedin.com/company/sonderplan"
    }
  }
}